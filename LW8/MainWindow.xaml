<Window x:Class="LW8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LW8"
        mc:Ignorable="d"
        Title="LW8" Height="400" Width="500" FontSize="14" Background="LightGreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="Поле ввода"/>
            <TextBox x:Name="tb_input" TextChanged="TextBoxInput_TextChanged"/>

            <TextBlock Text="Гамма"/>
            <TextBox x:Name="tb_gamma" TextChanged="TextBoxGamma_TextChanged"/>

            <TextBlock Text="Зашифрованное сообщение"/>
            <TextBox x:Name="tb_encrypted" TextChanged="TextBoxEncrypted_TextChanged"/>

            <TextBlock Text="Расшифрованное сообщение"/>
            <TextBox x:Name="tb_decrypted"/>
        </StackPanel>
    </Grid>
</Window>
