<Window x:Class="LW7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LW7"
        mc:Ignorable="d"
        Title="LW7" Height="300" Width="400" FontSize="14">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="tb_password" TextChanged="Hash_TextChanged"/>
            <TextBlock Text="Хэш"/>
            <TextBox x:Name="tb_hash"/>
        </StackPanel>
    </Grid>
</Window>
